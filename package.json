{
  "name": "opt-info",
  "displayName": "Clang Optimization Viewer",
  "description": "Show optimization remarks from clang right in your editor.",
  "icon": "icon.png",
  "version": "0.7.1",
  "publisher": "damkjaer",
  "preview": true,
  "engines": {
    "vscode": "^1.41.0"
  },
  "repository": "https://github.com/OskarDamkjaer/opt-info",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:cpp",
    "onLanguage:c"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.hideRemarks",
        "title": "Opt Info: Hide all remarks"
      }
    ],
    "configuration": {
      "title": "Opt Info",
      "properties": {
        "opt-info.libClangDir": {
          "type": "string",
          "default": "",
          "description": "Path to directory containing libclang.[so|dylib|dll]. Does not need to be set if libclang is in a system library directory."
        },
        "opt-info.clangPath": {
          "type": "string",
          "default": "",
          "description": "Path to clang binary. Does not need to be set if clang is in the $PATH variable."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/jest": "^25.1.5",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.41.0",
    "@types/yaml": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "jest": "^25.2.7",
    "ts-jest": "^25.3.0",
    "typescript": "^3.7.5",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "yaml": "^1.7.2"
  },
  "license": "ISC",
  "os": [
    "darwin",
    "linux"
  ]
}
